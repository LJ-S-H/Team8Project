package Pack1;

/**
 * Object that holds the information of an entry within a routing table
 * 
 * @author Lovejit Hari
 * @version 1.0
 */
public class Entry {
	
	private int myTime;
	
	private int myDestAddr;
	
	private int myHops;
	
	private String myPortNum;

	public Entry(String thePortNum, int theDestAddr, int theHops, int theTime) {
		super();
		this.myTime = theTime;
		this.myDestAddr = theDestAddr;
		this.myHops = theHops;
		this.myPortNum = thePortNum;
	}
}
